<%= form_for(@festival, url: { action: "create", method: "POST" }) do |f| %>
  <%= f.label(:title) %>
  <%= f.text_field(:title) %>

  <%= f.label(:start_time) %>
  <%= f.datetime_select(:start_time) %>

  <%= f.label(:end_time) %>
  <%= f.datetime_select(:end_time) %>

  <%= f.label(:location) %>
  <%= f.text_field(:location) %>

  <%= f.label(:website_url) %>
  <%= f.text_field(:website_url) %>

  <%= f.submit "Manage your Festival" %>
<% end %>